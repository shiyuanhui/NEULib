<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    
    <TextView 
        android:id="@+id/show_user_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="欢迎stu_20133716"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="#fff000"
        android:layout_marginTop="10dp"/>
    <Button 
        android:id="@+id/borrow_book"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="借书"
        android:layout_below="@id/show_user_name"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/have_borrowed_book"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="已借图书"
        android:layout_below="@id/borrow_book"
        android:layout_marginTop="20dp"/>
    <Button 
        android:id="@+id/new_password"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="修改密码"
        android:layout_below="@id/have_borrowed_book"
        android:layout_marginTop="20dp"/>
    <Button 
        android:id="@+id/book_idefication"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="图书导航"
        android:layout_below="@id/new_password"
        android:layout_marginTop="20dp"/>
    

</RelativeLayout>
